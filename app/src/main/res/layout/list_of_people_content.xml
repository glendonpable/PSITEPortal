<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip">

        <LinearLayout
            android:id="@+id/list_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip">

            <!--<com.android.volley.toolbox.NetworkImageView-->
                <!--android:layout_width="75dp"-->
                <!--android:layout_height="75dp"-->
                <!--android:id="@+id/list_pic"/>-->
            <app.psiteportal.com.utils.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/list_pic"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_thumbnail"
            android:layout_toRightOf="@+id/list_thumbnail"
            android:textStyle="bold"
            android:id="@+id/list_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_name"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/list_thumbnail"
            android:id="@+id/list_institution"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_institution"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/list_thumbnail"
            android:id="@+id/list_count"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

