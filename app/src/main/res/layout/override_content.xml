<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/override_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip">

        <LinearLayout
            android:id="@+id/override_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip">

            <app.psiteportal.com.utils.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/override_pic"/>


        </LinearLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/override_thumbnail"
            android:layout_toRightOf="@+id/override_thumbnail"
            android:textStyle="bold"
            android:id="@+id/override_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/override_name"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/override_thumbnail"
            android:layout_toLeftOf="@+id/override_checkbox"
            android:id="@+id/override_institution"/>

        <CheckBox
            android:id="@+id/override_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <!--</LinearLayout>-->
    </RelativeLayout>

</android.support.v7.widget.CardView>

